<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <!--Ignore the core module, as this is not complete yet.  Documenting this is JAVA-1391 -->
    <suppress checks="Javadoc*" files=".*driver-core.*"/>
    <!--Ignore the new API folder for javadoc until the specs for the API are finished. Documenting this is JAVA-1411 -->
    <suppress checks="Javadoc*" files="com[\\/]mongodb[\\/]client[\\/]"/>
    <!--Ignore the async functionality for now since this is incomplete -->
    <suppress checks="Javadoc*" files="com[\\/]mongodb[\\/]async[\\/]"/>

    <!--Do not check test classes -->
    <suppress checks="Javadoc*" files=".*test.*"/>
    
    <!--Classes to be documented later - JAVA-1428 -->
    <suppress checks="Javadoc*" files="LazyBSONCallback"/>
    <suppress checks="Javadoc*" files="LazyBSONDecoder"/>
    <suppress checks="Javadoc*" files="LazyBSONObject"/>
    <suppress checks="Javadoc*" files="LazyBSONList"/>
    <suppress checks="Javadoc*" files="LazyDBCallback"/>
    <suppress checks="Javadoc*" files="LazyDBDecoder"/>
    <suppress checks="Javadoc*" files="LazyDBList"/>
    <suppress checks="Javadoc*" files="LazyDBObject"/>
    <suppress checks="Javadoc*" files="LazyWriteableDBCallback"/>
    <suppress checks="Javadoc*" files="LazyWriteableDBDecoder"/>
    <suppress checks="Javadoc*" files="LazyWriteableDBObject"/>
    
</suppressions>